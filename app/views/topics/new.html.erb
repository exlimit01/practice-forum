<% if @topic.errors.any? %>
  <ul>
    <% @topic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @topic do |f| %>

  <div class="form-group">
    <%= f.label :title, '標題' %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, '內文' %>
    <%= f.text_area :content, :rows => 15, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit '提交', :class => "btn btn-primary" %>
  </div>

<% end %>